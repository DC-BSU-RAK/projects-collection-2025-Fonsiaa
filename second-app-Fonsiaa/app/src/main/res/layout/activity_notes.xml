<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Notes">

    <ImageView
        android:id="@+id/notePage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/notes" />

    <ImageButton
        android:id="@+id/notesButton"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:backgroundTint="#CE93D8"
        android:filterTouchesWhenObscured="false"
        android:foregroundTint="#AB1717"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="@+id/calendarButton"
        app:layout_constraintEnd_toStartOf="@+id/settingButton"
        app:layout_constraintHorizontal_bias="0.843"
        app:layout_constraintStart_toEndOf="@+id/homeButton"
        app:layout_constraintTop_toTopOf="@+id/calendarButton"
        app:layout_constraintVertical_bias="0.4"
        app:srcCompat="@drawable/note_button" />

    <ImageButton
        android:id="@+id/settingButton"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:backgroundTint="#FFFFFF"
        android:filterTouchesWhenObscured="false"
        android:foregroundTint="#AB1717"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="@+id/notesButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.89"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/notesButton"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/coloured_gear" />

    <ImageButton
        android:id="@+id/calendarButton"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:backgroundTint="#FFFFFF"
        android:filterTouchesWhenObscured="false"
        android:foregroundTint="#AB1717"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="@+id/homeButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.081"
        app:layout_constraintStart_toEndOf="@+id/homeButton"
        app:layout_constraintTop_toTopOf="@+id/homeButton"
        app:layout_constraintVertical_bias="0.4"
        app:srcCompat="@drawable/coloured_dates" />

    <ImageButton
        android:id="@+id/homeButton"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:backgroundTint="#FFFFFF"
        android:filterTouchesWhenObscured="false"
        android:foregroundTint="#AB1717"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.112"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.97"
        app:srcCompat="@drawable/coloured_home" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="281dp"
        android:layout_height="272dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.74"
        app:srcCompat="@drawable/cloud" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="237dp"
        android:layout_height="266dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.498"
        app:srcCompat="@drawable/flower" />

    <EditText
        android:id="@+id/writeNote3"
        android:layout_width="151dp"
        android:layout_height="62dp"
        android:backgroundTint="#00FFFFFF"
        android:ems="10"
        android:gravity="top|start"
        android:hint="Write your note"
        android:imeOptions="actionDone"
        android:inputType="textMultiLine"
        android:minHeight="30dp"
        android:padding="6dp"
        android:scrollbars="vertical"
        android:verticalScrollbarPosition="right"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.238"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.69" />

    <EditText
        android:id="@+id/writeNote2"
        android:layout_width="134dp"
        android:layout_height="103dp"
        android:backgroundTint="#00FFFFFF"
        android:ems="10"
        android:gravity="top|start"
        android:hint="Write your note"
        android:imeOptions="actionDone"
        android:inputType="textMultiLine"
        android:minHeight="50dp"
        android:padding="6dp"
        android:scrollbars="vertical"
        android:verticalScrollbarPosition="right"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.812"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="142dp"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="18dp"
        tools:layout_editor_absoluteY="194dp" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="209dp"
        android:layout_height="214dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.079"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.243"
        app:srcCompat="@drawable/square_note" />

    <EditText
        android:id="@+id/writeNote"
        android:layout_width="154dp"
        android:layout_height="121dp"
        android:backgroundTint="#00FFFFFF"
        android:ems="10"
        android:gravity="top|start"
        android:hint="Write your note"
        android:imeOptions="actionDone"
        android:inputType="textMultiLine"
        android:minHeight="50dp"
        android:padding="6dp"
        android:scrollbars="vertical"
        android:verticalScrollbarPosition="right"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.151"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.291" />

</androidx.constraintlayout.widget.ConstraintLayout>